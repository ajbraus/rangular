<form ng-submit="createQuestion()">
  <div class='form-group'>
    <label>New Question</label>
    <input ng-model="question.title" type='text' class='form-control' />
  </div>
  <div class='form-group'>
    <label>Summary (be as detailed as possible)</label>
    <textarea ng-model="question.body" class='form-control'></textarea>
  </div>
  <button type='submit' class='btn btn-default'>Save Question</button>
</form>
<h1>Questions</h1>
<div class='list-group'>
  <div class='list-group-item' ng-repeat="question in questions">
    {{question.body}}
  </div>
</div>